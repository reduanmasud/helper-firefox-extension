{
  "name": "console-script-manager",
  "version": "1.0.0",
  "description": "Firefox extension to create, manage and run JavaScript scripts in the browser console",
  "main": "background/background.js",
  "scripts": {
    "build": "web-ext build --source-dir=. --artifacts-dir=./dist --overwrite-dest",
    "lint": "web-ext lint --source-dir=.",
    "start": "web-ext run --source-dir=."
  },
  "keywords": [
    "firefox-extension",
    "javascript",
    "console",
    "script-manager",
    "xpath",
    "element-selector"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "esbuild": "^0.25.8",
    "web-ext": "^8.9.0"
  },
  "dependencies": {
    "@codemirror/lang-javascript": "^6.2.4",
    "codemirror": "^6.0.2"
  }
}
