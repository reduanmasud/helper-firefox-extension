{
  "manifest_version": 2,
  "name": "QA Tools",
  "version": "1.0",
  "description": "A powerful Firefox extension for test engineers to create, manage, and execute JavaScript scripts with advanced element inspection and AI-powered analysis",
  "icons": {
    "48": "icons/icon-48.svg",
    "96": "icons/icon-96.svg"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "<all_urls>",
    "https://openrouter.ai/*",
    "https://api.openai.com/*"
  ],
  "browser_action": {
    "default_icon": "icons/icon-48.svg",
    "default_title": "QA Tools"
  },
  "sidebar_action": {
    "default_icon": "icons/icon-48.svg",
    "default_title": "QA Tools",
    "default_panel": "sidebar/sidebar.html",
    "open_at_install": false
  },
  "background": {
    "scripts": ["background/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"]
    }
  ]
}